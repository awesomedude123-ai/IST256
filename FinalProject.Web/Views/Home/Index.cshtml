@model IEnumerable<Category>;
@{
	ViewData["Title"] = "Home Page";
}
<link href="https://fonts.cdnfonts.com/css/bubble-letters" rel="stylesheet">

<div>
	<div class="container">
		<div class="row">
			<h1 class="display-4 text-center"
		style="font-family: 'Bubble Letters', sans-serif; font-size: 3rem; color: rgb(88, 105, 231); font-weight: bold">
		KoalasKlothing</h1>

	<h5 class=" display-4 text-center"
		style="font-family: 'Bubble Letters', sans-serif; font-size: 2rem; color: rgb(218, 29, 29); font-weight: bold">
		Most Popular Winter Styles!</h5>
			<div class="col-md-6">
				<img src="~/images/snow.png" alt="snow flake" height="75px" width="75px" style="margin-top: 10px;">
			</div>
			<div class="col-md-6 text-end">
				<img src="~/images/snow.png" alt="snow flake" height="75px" width="75px" style="margin-top: 10px;">
			</div>
		</div>
	</div>

	<div class="container text-center">
    <div class="row" style="text-align: center;">
        @foreach(var item in Model)
        {
            <div class="card card-block mx-2 mb-4" style="max-width: 250px; max-height: 390px;">
            <a href="details.cshtml" style="text-decoration: none; color: inherit;">
                
                <img src="~/images/@item.CategoryImage" alt="Ripped Jeans" height="250px" width="220px">
                <p>Ripped Jeans- $60.00</p>
            </a>
            </div>
        }
        
    </div>
</div>